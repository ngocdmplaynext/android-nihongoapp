<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jp.playnext.voicecards.fragment.CardFragment">

    <TextView
        android:id="@+id/tv_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Card"
        android:textSize="36sp" />

    <View
        android:id="@+id/separator_card"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_card"
        android:layout_marginTop="2dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tv_expected_sentence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator_card"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="Original sentence"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_received_sentence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_expected_sentence"
        android:layout_marginTop="13dp"
        android:text="Said sentence"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/tv_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/tv_received_sentence"
        android:text="%"
        android:textSize="30sp"
        android:textAlignment="textStart"
        android:layout_centerHorizontal="true" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_percentage"
        android:layout_marginTop="2dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tv_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/separator"
        android:layout_marginTop="13dp"
        android:text="Result" />


    <TextView
        android:id="@+id/tv_result_analysis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_result_text"
        android:text="Result analysis" />

</RelativeLayout>
